@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">用户名</div>
        <div class="col-4"><input type="text" id="UserName" /></div>
    </div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="LoginButton" value="登录" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>

</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <span>在线列表</span>
    <div class="col-6">
        <ul id="UserList"></ul>
    </div>
</div>
<div class="row">
    <span>消息列表</span>
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<input type="hidden" id="connectionId" />
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>